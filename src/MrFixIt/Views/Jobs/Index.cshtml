@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Jobs List";
}

<div class="text-center">
    <h3>Our Current Jobs</h3>
    @Html.ActionLink("Add a new job", "Create")
</div>
@foreach (var Job in Model)
{
    <div>
        <h3>@Job.Title</h3>
        <ul>
            <li>@Job.Description</li>
        </ul>
        @if (Job.Worker == null)
        {
        <p class="btn">This job is unclaimed. @Html.ActionLink("Claim This Job", "Claim", new { @text = @Job.Title, id = Job.JobId })</p>
        }
        else
        {
            <p class="btn">This Job is claimed by @Job.Worker.FirstName @Job.Worker.LastName</p>

        }
    </div>

    <hr />
}

